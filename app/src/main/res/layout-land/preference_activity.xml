<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgkids"
    >

    <RelativeLayout
        android:layout_width="553dp"
        android:layout_height="373dp"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="93dp"
            android:layout_marginBottom="140dp"
            app:srcCompat="@drawable/norge" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="122dp"
            android:layout_marginBottom="140dp"
            app:srcCompat="@drawable/tyskflagg" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="205dp"
            android:textColor="@color/blackColor"
            android:text="@string/preferences_title"
            android:textSize="30dp"
            >
        </TextView>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="280dp"
            android:textSize="20dp"
            android:text="@string/preferences_option_two" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="280dp"
            android:textSize="20dp"
            android:text="@string/preferences_option_three" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="390dp"
            android:layout_marginBottom="280dp"
            android:text="@string/preferences_option_one"
            android:textSize="20dp" />

        <Button
            android:id="@+id/returnBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/whiteColor"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="79dp"
            android:textSize="20dp"
            android:text="@string/return_btn_title" />


    </RelativeLayout>

</LinearLayout>