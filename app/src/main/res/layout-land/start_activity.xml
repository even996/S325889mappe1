<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgkids">


    <TextView
        android:id="@+id/wrong_answers"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="@string/start_game_score"
        android:textAlignment="center"
        android:textColor="@color/blackColor"
        android:textSize="20sp">


    </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/correct_answers"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/blackColor"
            android:textSize="20sp">
        </TextView>


        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="420dp"
            android:background="@color/blueColor"
            android:text="@string/seven"
            android:textSize="30sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button8"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="310dp"
            android:textSize="30sp"
            android:text="@string/eight"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button9"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="200dp"
            android:textSize="30sp"
            android:text="@string/nine"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/button6"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="200dp"
            android:textSize="30sp"
            android:text="@string/six"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button3"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="60dp"
            android:textSize="30sp"
            android:text="@string/three"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button5"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="310dp"
            android:textSize="30sp"
            android:text="@string/five"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button2"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="310dp"
            android:layout_marginBottom="60dp"
            android:textSize="30sp"
            android:text="@string/two"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/confirm"
            android:background="@color/greenColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200dp"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:text="@string/statt_game_confirm"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button4"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="420dp"
            android:textSize="30sp"
            android:text="@string/four"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button1"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_above="@+id/button0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="420dp"
            android:layout_marginBottom="60dp"
            android:textSize="30sp"
            android:text="@string/one"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button0"
            android:background="@color/blueColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="420dp"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:text="@string/zero"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/buttonC"
            android:background="@color/redColor"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="310dp"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:text="@string/cancel"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="370dp"
            android:textColor="@color/blackColor"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/start_game_title"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="casual"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:textColor="@color/blackColor"
            android:text="@string/start_game_title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="300dp"
            android:textColor="@color/blackColor"
            android:textSize="40sp"
             />


    </RelativeLayout>


</LinearLayout>